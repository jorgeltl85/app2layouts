<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="@dimen/dimen_horizontal"
    android:paddingLeft="@dimen/dimen_horizontal"
    android:paddingTop="@dimen/dimen_vertical"
    android:paddingBottom="@dimen/dimen_vertical"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:text="Button" />

    <TextView
        android:id="@+id/texto_2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_margin="42px"
        android:layout_marginStart="42px"
        android:layout_marginTop="42px"
        android:layout_marginEnd="42px"
        android:layout_marginBottom="42px"
        android:gravity="center"
        android:padding="30px"
        android:text="@string/texto_bienvenida"
        android:textSize="@dimen/font_size" />

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Button" />

    <TextView
        android:id="@+id/texto_1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="42px"
        android:layout_marginStart="42px"
        android:layout_marginTop="42px"
        android:layout_marginEnd="42px"
        android:layout_marginBottom="42px"
        android:gravity="left|center_vertical"
        android:padding="30px"
        android:text="@string/texto_bienvenida"
        android:layout_below="@id/texto_2"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/font_size" />

</LinearLayout>